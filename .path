# -*- mode: sh; -*-

# prepend path with optional paths

# Add macports stuff
[ -d /opt/local ] && export PATH=/opt/local/bin:/opt/local/sbin:$PATH

# ruby gems
[ -d ~/.rvm/bin ] && export PATH=~/.rvm/bin:$PATH

# add commands like cv etc...
[ -f /usr/share/doc/cdargs/examples/cdargs-bash.sh ] && source /usr/share/doc/cdargs/examples/cdargs-bash.sh

# Matlab, at the end
[ -d /Applications/MATLAB_R2012a.app ] && export PATH=$PATH:/Applications/MATLAB_R2012a.app/bin
[ -d /Applications/MATLAB_R2013a.app ] && export PATH=$PATH:/Applications/MATLAB_R2013a.app/bin
[ -d /Applications/MATLAB_R2014a.app ] && export PATH=$PATH:/Applications/MATLAB_R2014a.app/bin
[ -d /Applications/MATLAB_R2015a.app ] && export PATH=$PATH:/Applications/MATLAB_R2015a.app/bin

# Add latex stuff (at the end, so we don't use macports version)
[ -d /usr/texbin ] && export PATH=/usr/texbin:$PATH

# add npm packages bins
[ -d ~/.npm-packages/bin ] && export PATH=~/.npm-packages/bin:$PATH

# Add `~/bin` to the `$PATH`
[ -d ~/.local/bin ] && export PATH=~/.local/bin:$PATH
